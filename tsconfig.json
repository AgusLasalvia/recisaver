{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": [
				"./*"
			],
			"@assets/*": [
				"./assets/*"
			],
			"@lib/*": [
				"./util/*"
			],
			"@components/*": [
				"./components/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	]
}